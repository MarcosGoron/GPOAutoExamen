@model GpoAutofin.Data.Models.ListaFactura

@{
    ViewBag.Title = "GetFacturas";
}
<h2>Lista de facturas</h2>

<p>
    <a href="@Url.Action("GenerarFactura", "Facturas")" class="btn btn-success">Generar Factura <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></a>

    <a href="@Url.Action("RegistroClientes", "Clientes")" class="btn btn-success">Registrar Cliente <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span></a>

    <a href="@Url.Action("RegistroProductos", "Productos")" class="btn btn-success">Registrar Producto <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span></a>
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>ID</th>
        <th>Numero de Factura</th>
        <th>Fecha y Hora</th>
        <th>Cliente</th>
        <th>Producto</th>
        <th>Cantidad</th>
        <th>Editar</th>
    </tr>

    @foreach (var item in ViewBag.Listafacturas)
    {
        <tr>
            <td>
                @item.IdFactura
            </td>
            <td>
                @item.NumeroFactura
            </td>
            <td>
                @item.FechaHora
            </td>
            <td>
                @item.Cliente
            </td>
            <td>
                @item.Producto
            </td>
            <td>
                @item.Cantidad
            </td>
            <td align="center"><a href="@Url.Action("EditarFactura", "Facturas", new { IdFactura = item.IdFactura})" class="btn btn-danger">Editar <span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a></td>
        </tr>
    }

</table>
